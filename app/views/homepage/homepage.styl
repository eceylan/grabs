/*
*
* Homepage Styles
*
*/

// Mixins
@import sprite
@import sprite-retina
@import mixins


$transition = all 0.2s ease 0s

.introduction
.description
.development-team
    padding 100px 0

    h1
    h2
    h3
        text-align center

    h1
        font-size 55px
        font-weight 800
        letter-spacing -2px

    h2
        color $yellow
        font-size 48px
        font-weight inherit

    h3
        font-size 18px
        color #333
        margin-top 5px

.introduction
    alignment()

    ul
        overflow hidden
        padding 30px 0

        li
            float left
            width 290px
            text-align center

            a
                display block
                width 220px
                height 220px
                margin 0 auto
                border-radius 50%
                background-color $yellow
                font-size 30px
                font-weight 800
                line-height 223px
                color #fff
                position relative
                transition $transition

                &:before
                    content ""
                    width 212px
                    height 212px
                    border-radius 50%
                    box-shadow 0 0 0 4px $yellow
                    position absolute
                    top 4px
                    left 4px
                    transition $transition

                &:hover
                    line-height 220px
                    font-size 40px
                    transition $transition

                &:hover:before
                    transform scale(1.1)
                    transition $transition

            &:nth-child(2)
            &:nth-child(4)
                a
                    background-color $gray

                    &:before
                        box-shadow 0 0 0 4px $gray

            h3
                font-weight 600
                margin 25px 0 10px 0

            p
                font-size 14px
                line-height 28px
                color #333
.description
    border-top 1px solid $gray

    ul
        alignment()
        overflow hidden
        margin-top 50px

        li
            display block
            float left
            width 565px

            h3
                color $yellow
                font-size 14px
                font-weight 600
                text-align right

            p
                font-size 16px
                line-height 20px
                color $black
                margin 5px 0
                text-align right

                strong
                    font-weight 700

            &:nth-child(odd)
                padding-right 25px
                float left

            &:nth-child(even)
                position relative
                padding 25px 0 30px 25px
                float right

                &:before
                    content ""
                    display block
                    height 350px
                    width 1px
                    background $gray
                    position absolute
                    top -50px
                    left 0

                &:after
                    content ""
                    display block
                    height 30px
                    width 30px
                    background-color $gray
                    // getSprite $check $check-2x
                    border-radius 50%
                    border 5px solid #fff
                    position absolute
                    margin-top -15px
                    top 50%
                    left -20px

                h3
                p
                    text-align left

    
.development-team
    border-top 1px solid $gray

    div
        alignment()

    .members
        overflow hidden

        > li
            float left
            display block
            width 490px
            min-height 160px
            margin-top 100px
            text-align right
            background #f8f7f7
            padding 25px 25px 25px 10px

            img
                float left
                width 140px
                height 140px
                border-radius 140px
                border 4px solid #f8f7f7
                margin-top -100px
                cursor pointer
                transition $transition

                &:hover
                    transform scale(1.1)
                    border 4px solid $yellow
                    transition $transition

            h3
                color $yellow
                font-size 30px
                font-weight 600
                text-align right

            h4
                margin 5px 0 10px 0
                font-size 16px
                font-weight 600

            p
                font-size 14px
                line-height 20px

            .pages
                padding-top 20px

                li
                    float right
                    margin-left 10px

                a
                    display block
                    width 40px
                    height 30px
                    font-size 22px
                    border-radius 50%
                    background-color #444
                    color #fff
                    padding-top 8px
                    text-align center

        > .alignment-right
            margin-left 80px
            text-align left
            padding 25px 10px 25px 25px

            img
                float right

            h3
                text-align left

            .pages
                li
                    float left
                    margin 0 10px 0 0
