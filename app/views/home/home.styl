.home
	padding 40px 0

	.brands
		overflow hidden

		li
			float left
			width 220px
			padding 60px 35px 30px
			
			a
				width 220px
				height 125px
				border-radius 220px
				background-color #F6C815
				display block
				padding-top 95px
				font-size 30px
				color #fff
				margin-bottom 20px

			p
				font-size 14px
				line-height 26px
.team
	border-top 1px dotted #c3c3c3
	padding 50px 0

	.team-members
		overflow hidden
		
		> li
			display block
			width 490px
			text-align left
			background-color #f8f7f7
			min-height 160px
			margin-top 100px
			display block
			padding 25px
			float left

			img
				width 140px
				border-radius 140px
				border 4px solid #f8f7f7
				margin-left -14px
				margin-top -100px

			h3
				text-align right
				color #e3b70c
				font-size 30px
				font-weight 600
				margin-top -51px

			span
				font-size 16px
				line-height 24px
				font-weight 600
				display block
				text-align right

			p
				font-size 14px
				line-height 18px
				padding-top 11px
				text-align right

			.social
				padding-top 17px

				li
					float right
					margin-left 10px

				a
					font-size 22px
					width 39px
					height 30px
					border-radius 39px
					background-color #444
					display block
					color #fff
					padding-top 8px
					text-align center

		> .alignment-right
			margin-left 80px
			text-align right

			h3
			span
			p
				text-align left

			.social
				li
					float left
					margin 0 10px 0 0


			
					


