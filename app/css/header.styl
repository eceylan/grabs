@import mixins

header
    overflow hidden
    padding 10px 0
    border-bottom 1px solid $softGray

    div
        alignment()

    p
        float left

        a
            font-size 40px
            font-weight 700
            color $yellow

            &:visited
                color $yellow

            span
                color $gray

    ul
        float right

        li
            float left
            border-right 1px solid $softGray
            padding 5px 10px
            margin 10px 0

            &:last-child
                border none
