// fonts
@import url(http://fonts.googleapis.com/css?family=Raleway:400,500,600,700,800);

// icons
@import url(http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css);


::selection
    background #F6C815
    color #fff

body
    font-family 'Raleway', Arial
    color #676767
    text-align center

header
    height 55px
    box-shadow 0 0px 5px #999
    padding-top 10px

    p
        float left

        a
            font-size 40px
            font-weight bold
            color #F6C815

            &:hover
                text-decoration none

    ul
        float right

        li
            float left
            padding 15px 30px

section
    min-height 200px

footer
    border-top 1px solid #F6C815
    padding 30px 0
    text-align center

    ul
        padding-bottom 20px

        li
            display inline-block
            padding-right 5px

            a
                background #676767
                border-radius 100%
                display block
                width 32px
                height 23px
                padding-top 9px

                &:hover
                    background #F6C815
                
                i
                    color #fff

.container
    width 1170px
    margin auto

h1
    font-size 55px
    line-height 1.1
    font-weight 800
    letter-spacing -2px

h2
    color #F6C815
    font-size 48px
    font-weight inherit
