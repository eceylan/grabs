@import mixins

footer
    border-top 1px solid $yellow
    padding 30px 0
    text-align center

    div
        alignment()

    ul
        padding-bottom 20px

        li
            display inline-block
            padding-right 5px

            a
                background #444
                border-radius 100%
                display block
                width 32px
                height 23px
                padding-top 9px
                
                i
                    color #fff
